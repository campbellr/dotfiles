[user]
  name = Ryan Campbell
  email = campbellr@gmail.com

[mailmap]
  file = ~/.config/git/mailmap

[merge]
tool = vim_mergetool
conflictStyle = diff3

[mergetool "vim_mergetool"]
cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
trustExitCode = true

[commit]
  verbose = true

[color]
  ui = auto

[alias]
  l = log --graph --decorate --all
  graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
  hist = log --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short
  dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
  redate = !EDITOR=true git rebase --onto $(git merge-base -a HEAD @{upstream}) --exec 'sleep 1 && git commit --amend --date=now --no-edit'
  rebase-upstream = !git rebase --onto $(git merge-base -a HEAD @{upstream})
  co = !git checkout $(git branch | fzf --height=40%)
  cor = !git checkout $(git branch -r | fzf --height=40%)
  af = !git autofixup $(git merge-base -a HEAD @{u})
  nb = new-branch
  frb = !git fetch && git rebase -i @{upstream}

[log]
  decorate = short
  date = local
  mailmap = true

[rebase]
  autosquash = false

[credential]
  helper = cache

[core]
  pager = delta
  editor = nvim

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended
    line-numbers = true
    side-by-side = false

[interactive]
    diffFilter = delta --color-only

[diff]
  compactionHeuristic = true
  colorMoved = default
  algorithm = histogram

[fsck]
  zeroPaddedFilemode = ignore

[fetch]
  prune = true

[tig]
#  vertical-split = true

[url "git@github.com:kirasystems/"]
	insteadOf = https://github.com/kirasystems/

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[pull]
	ff = only
